<%= form_for([:admin, @available_category]) do |f| %>
  <% if @available_category.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @available_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-4">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true, placeholder: "Entertainment" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <div class="field">
        <%= f.label :color %>
        <%= f.text_field :color, class: "form-control", required: true, placeholder: "#AAAAAA" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <div class="field">
        <%= f.label :icon %>
        <%= f.text_field :icon, class: "form-control", required: true, placeholder: "fa fa-plus" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <div class="field">
        <%= f.submit class: "btn btn-default" %>
      </div>
    </div>  
  </div>  
<% end %>
