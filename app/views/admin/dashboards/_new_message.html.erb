<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#log_<%= message.id %>">
          <div>
            <span><%= message.sender.email %></span>
            <span class='text-muted pull-right'><%= message.created_at.strftime(" %l:%M %P") %></span>
          </div>
          <span><%= message.content %></span>  
        </a>
      </h4>
    </div>
    <div id="log_<%= message.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <%= get_replies(message.message_id) %>  
      </div>
    </div>
  </div>
</div>