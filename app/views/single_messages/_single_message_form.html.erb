<%=form_for message, remote: true, authenticity_token: true do |f|%>
	<div class="row-div">
		<div class="col10">
		  <%= f.text_area :content, class: "form-control", data: {textarea: "message"}, placeholder: "Enter message:" %>
		  <%= f.hidden_field :room_id, value: room.id %>
	  </div>
	  <div class="col2">
	  	<%= f.submit "Send", class: "send-msg btn btn-default" %>
	  </div>	
  </div>
<%end%>

<style type="text/css">
	.row-div{
		float: left;
		width: 100%;
	}
	.row-div textarea{
		height: 35px;
    padding: 6px;
	}
	.col10{
		width: 78%;
		float: left;
	}
	.col2{
		width: 20%;
		float: left;
		margin-left: 5px;
	}
</style>