<div class="row col-md-8 col-md-offset-2">
  <h1><%= @room.title %></h1>

<div class="panel panel-default">
  <% if @room.single_messages.any? %>
    <div class="panel-body" id="messages">
      <%= render partial: 'single_messages/single_message', collection: @room.single_messages%>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    </div>
  <%end%>
</div>

  <%= render partial: 'single_messages/single_message_form', locals: {message: @message, room: @room}%>
</div>
